<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    tools:context=".item_selected_folder.MyOrder_edit_milktea">


    <ScrollView
        android:scrollbars="vertical"
        android:scrollbarSize="5dp"
        android:fadeScrollbars="false"
        android:layout_width="275dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="#FFFBD7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp">

                <RadioGroup
                    android:id="@+id/PriceRG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Size"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textprice16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Small  16oz"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteY="255dp" />

                    <RadioButton
                        android:id="@+id/price16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:checked="true"
                        android:text="16oz Price"
                        android:textSize="20sp"
                        android:theme="@style/color_checkBox"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="116dp" />

                    <TextView
                        android:id="@+id/textprice22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Large  24oz "
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteY="255dp" />

                    <RadioButton
                        android:id="@+id/price22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22oz Price"
                        android:textSize="20sp"
                        android:theme="@style/color_checkBox"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="116dp" />
                </RadioGroup>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp">

                <RadioGroup
                    android:id="@+id/SugarLvlGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sugar Level"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/z0percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 %"
                        android:textSize="15sp"
                        android:theme="@style/color_checkBox"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="116dp" />

                    <RadioButton
                        android:id="@+id/z25percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 %"
                        android:textSize="15sp"
                        android:theme="@style/color_checkBox"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="116dp" />

                    <RadioButton
                        android:id="@+id/z50percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="50 %"
                        android:textSize="15sp"
                        android:theme="@style/color_checkBox"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="116dp" />

                    <RadioButton
                        android:id="@+id/z75percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75 %"
                        android:textSize="15sp"
                        android:theme="@style/color_checkBox"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="116dp" />

                    <RadioButton
                        android:id="@+id/z100percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100 %"
                        android:textSize="15sp"
                        android:theme="@style/color_checkBox"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="116dp" />
                </RadioGroup>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="ADD ONS"
                    android:textColor="#ed6f00"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <CheckBox
                    android:id="@+id/checkBoxJelly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:text="Extra Coffee Jelly ₱25.00"
                    android:textSize="20sp"
                    android:theme="@style/color_checkBox" />

                <CheckBox
                    android:id="@+id/checkBoxPearl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="145dp"
                    android:text="Extra Sink Pearl ₱15.00"
                    android:textSize="20sp"
                    android:theme="@style/color_checkBox" />

                <CheckBox
                    android:id="@+id/checkBoxNata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="210dp"
                    android:text="Extra Sink Nata de Coco ₱15.00"
                    android:textSize="20sp"
                    android:theme="@style/color_checkBox" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:fadeScrollbars="false"
        android:scrollbarSize="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.486">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="639dp"
            android:layout_height="571dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.466">
            <TextView
                android:id="@+id/textViewCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/itemNameED"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/itemNameED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Item Name"
                android:textColor="@color/black"
                android:textSize="28dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="30dp" />

            <TextView
                android:id="@+id/descriptionED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="item desctiption put in here"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/itemNameED"
                tools:layout_editor_absoluteX="30dp" />


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"

                app:layout_goneMarginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.499"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionED"
                tools:srcCompat="@tools:sample/avatars" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#FFFBF4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <Button
                        android:id="@+id/plusED"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#ed6f00"
                        android:text="+"
                        android:textSize="25sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.907"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/minusED"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:backgroundTint="#FDB473"
                        android:text="-"
                        android:textSize="25sp"
                        app:layout_constraintHorizontal_bias="0.202"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="25dp" />

                    <TextView
                        android:id="@+id/numberED"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="30dp"
                        app:layout_constraintEnd_toStartOf="@+id/plusED"
                        app:layout_constraintHorizontal_bias="0.525"
                        app:layout_constraintStart_toEndOf="@+id/minusED"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/backED"
                android:layout_width="470dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="74dp"
                android:layout_marginLeft="74dp"
                android:layout_marginEnd="95dp"
                android:layout_marginRight="95dp"
                android:backgroundTint="@color/white"
                android:text="Cancel"
                android:textColor="#EC8C07"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/deleteMY"
                app:strokeColor="#ed6f00"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/saveED"
                android:layout_width="470dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="#FA650F"
                android:text="save changes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.436"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3" />

            <Button
                android:id="@+id/deleteMY"
                android:layout_width="470dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F31F1F"
                android:text="Remove"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.44"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/saveED" />

            <TextView
                android:id="@+id/price22Store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="temp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/price16Store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="temp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>